<resources>
    <style name="style_btn_blue" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/base_btn_color</item>
        <item name="android:padding">17dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="style_btn_white" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:padding">17dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_main_fun">
        <item name="android:colorBackground">@color/base_btn_color</item>
        <item name="android:color">@color/base_btn_color</item>
    </style>
    <!-- 实线样式X -->
    <style name="style_line_x">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/light_grey</item>
    </style>
    <!-- 实线样式Y -->
    <style name="style_line_y">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_grey</item>
    </style>
    <style name="FadeInPopWin">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="@android:windowEnterAnimation">@anim/pop_win_content_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/pop_win_content_fade_out</item>
    </style>


    <style name="SpeedDial" />

    <style name="SpeedDial.Base" />

    <style name="SpeedDial.Base.FabLabelStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">@dimen/sd_label_max_width</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/sd_label_text_color</item>
    </style>

    <style name="SpeedDial.FabLabelStyle" parent="SpeedDial.Base.FabLabelStyle">
        <item name="android:textStyle">bold</item>
    </style>
</resources>